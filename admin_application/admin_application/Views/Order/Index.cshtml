@{
}

@model List<admin_application.Models.Order>

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Customer details</th>
                <th>Number of products</th>
                <th></th> @*used for button*@
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count(); i++)
            {
                var item = Model[i];
                <tr>
                    <td>@(i + 1)</td>
                    <td>@(item.Owner.FirstName + " " + item.Owner.LastName)</td>
                    <td>@item.ProductInOrders.Count()</td>
                    <td>
                        <a asp-controller="Order" asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">
                            View Order
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>